<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencastproject.coverimage.impl.CoverImageServiceOsgiImpl" immediate="true"
               activate="activate">
  <implementation class="org.opencastproject.coverimage.impl.CoverImageServiceOsgiImpl"/>
  <property name="service.description" value="Cover Image Service"/>

  <service>
    <provide interface="org.opencastproject.coverimage.CoverImageService"/>
  </service>

  <reference name="Workspace" cardinality="1..1" interface="org.opencastproject.workspace.api.Workspace"
             policy="static" bind="setWorkspace"/>
  <reference name="ServiceRegistry" cardinality="1..1"
             interface="org.opencastproject.serviceregistry.api.ServiceRegistry" policy="static"
             bind="setServiceRegistry"/>
  <reference name="SecurityService" cardinality="1..1" interface="org.opencastproject.security.api.SecurityService"
             policy="static" bind="setSecurityService"/>
  <reference name="UserDirectoryService" cardinality="1..1"
             interface="org.opencastproject.security.api.UserDirectoryService" policy="static"
             bind="setUserDirectoryService"/>
  <reference name="OrganizationDirectoryService" cardinality="1..1"
             interface="org.opencastproject.security.api.OrganizationDirectoryService" policy="static"
             bind="setOrganizationDirectoryService"/>
</scr:component>
